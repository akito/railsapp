<!DOCTYPE html>
<html>
  <head>
    <title>Railsapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="stripe-key" content="<%= Rails.application.credentials.stripe_public_key %>">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'https://js.stripe.com/v3/', 'data-turbolinks-track': 'reload' %>
    <script src="https://js.stripe.com/v3/"></script>
    <%= javascript_pack_tag    'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://js.stripe.com/v3/"></script>

  </head>

  <body>
    <% if current_user %>
      <%=  link_to 'logout', logout_path, method: :delete %>
    <% else %>
      <%=  link_to 'login', login_path %>
    <% end %>
    <%= link_to 'Products', products_path %>
    <%= link_to 'Shopping Cart', cart_path %>
    <%= link_to 'Order', orders_path %>
    <%= yield %>
  </body>
</html>
